@model IEnumerable<KiemTra_PhanMinhTri1.Models.HocPhan>

@{
    ViewBag.Title = "ListHP";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ĐĂNG KÝ HỌC PHẦN</h2>

<table class="table">
    <tr>
        <th>
            Mã Học Phần
        </th>
        <th>
            Tên Học Phần
        </th>
        <th>
            Số Tính Chỉ
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MaHP)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TenHP)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SoTinChi)
        </td>
        <td>
            @Html.ActionLink("DangKy", "DangKy", new { id = item.MaHP })
        </td>
    </tr>
}

</table>
