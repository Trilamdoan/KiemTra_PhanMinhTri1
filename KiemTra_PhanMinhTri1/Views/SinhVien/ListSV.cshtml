@model IEnumerable<KiemTra_PhanMinhTri1.Models.SinhVien>

@{
    ViewBag.Title = "ListSV";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh Sách Sinh Viên</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Họ Tên
        </th>
        <th>
            Giới Tính
        </th>
        <th>
            Ngày sinh
        </th>
        <th>
            Hình
        </th>
        <th>
            Ngành
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.HoTen)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GioiTinh)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NgaySinh)
        </td>  
    <td>
        <img src="@Html.DisplayFor(modelItem => item.Hinh)" alt="Hinh thumbnail" width="95" />
    </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaNganh)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.MaSV }) |
            @Html.ActionLink("Detail", "Detail", new { id = item.MaSV }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.MaSV })
        </td>
    </tr>
}
</table>
